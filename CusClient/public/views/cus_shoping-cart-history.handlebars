
<body>
   
    

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Lịch sử mua hàng</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <span>Lịch sử mua hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Tên cửa hàng</th>
                                    <th>Giá</th>
                                    <th>Ngày mua</th>
                                    <th>Tình trạng đơn</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each history}}
                                <tr>
                                 
                                    <td>
                                        {{this.ten_cua_hang}}
                                    </td>
                                    
                                    <td>
                                        {{#formatMoney this.tongtien}}{{/formatMoney}}
                                    </td>
                                    <td>
                                        {{this.ngay_mua}}
                                    </td>
                                    <td>
                                        {{this.trang_thai}}
                                    </td>
                                    <td class ="shoping__cart__item__close">
                                        <span class="icon_open"></span>
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="shoping-cart-history" class="primary-btn cart-btn cart-btn-right"><span class="icon_loading"></span>
                            Cập nhật</a>
                    </div>
                </div>
                <div class="col-lg-6">
                   
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Tổng chi</h5>
                        <ul>
                            <li><span>{{#formatMoney sumtien}}{{/formatMoney}}</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->


</body>
