<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Đăng nhập</h3>
                                </div>
                                <div class="card-body">
                                    <form method="post" action="/loginform">
                                        <div class="form-floating mb-3">
                                            <label for="inputEmail">Tài khoản</label>

                                            <input name="username" required class="form-control" id="inputEmail"
                                                type="text" placeholder="name@example.com" />
                                        </div>
                                        <div class="form-floating mb-3">
                                            <label for="inputPassword">Mật khẩu</label>

                                            <input name="password" required class="form-control" id="inputPassword"
                                                type="password" placeholder="Password" />
                                        </div>

                                        <div class="d-flex align-items-center justify-content-end">
                                            <a class="btn btn-primary">
                                                <input type="submit" value="Đăng nhập" />
                                            </a>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="/register-form">Chưa có tài khoản ? Đăng ký ngay!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>