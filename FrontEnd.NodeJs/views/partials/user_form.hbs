<div class="card" style="width: 24rem;">
        <form method="POST" action="/{{action}}" class="align-items-center" style="margin:20px">
            <div class="form-row">
                <div class="col-md-12 col-md-offset-10">
                    <label for="fname">First name</label>
                    <input type="text" class="form-control" placeholder="First name" id="fname" name="first_name">
                </div>
                <div class="col-md-12 col-md-offset-10">
                    <label for="lname">Last name</label>
                    <input type="text" class="form-control" placeholder="Last name" id="lname" name="last_name">
                </div>
                <div class="col-md-12 col-md-offset-10">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name ="email">
                </div>
                <div class="col-md-12 col-md-offset-10">
                     <label for="imgurl">Avatar</label>
                    <input type="text" class="form-control" placeholder="Post your avatar url here" id="imgurl" name ="avatar">
                </div>
            </div>
            <input class="btn btn-primary " type="submit" value="Submit" style="margin-top:10px;margin-left:200px">
        </form>
    </div>