<div class="mt-2 mb-4 ml-4">
    <a href="{{url}}" type="button" class="btn btn-primary mb-2">Xuất file excel</a>
    <table class="table table-bordered" id="package-Statistic-Table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Số lượng còn lại</th>
                <th scope="col">Số lượng bán ra</th>
                <th scope="col">Số lượng đánh giá</th>
                <th scope="col">Trung binh sao</th>

            </tr>
        </thead>
        <tbody>
            {{#each sp}}
            <tr>
                <th scope="row">{{tenSp}}</th>
                <td>{{soLuongConLai}}</a></td>
                <td>{{soLuongBanRa}}</td>
                <td>{{soLuotDanhGia}}</td>
                <td>{{trungBinhSao}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-8 center">
        <div class="card mb-4">
            <div class="card-body"><canvas id="packageBarChart" width="100%" height="40"></canvas></div>
        </div>
    </div>
</div>
<script src="/js/chart/chart-bar-demo.js"></script>