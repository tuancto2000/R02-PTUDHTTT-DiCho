
<body>
  
    
    <!-- Contact Section Begin -->
    <section class="contact spad" style="padding-top: 10px; !important; padding-bottom:10px; !important">
        <div class="container">
            <div class = "row">
                 <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div>
                        <img src = "https://image.shutterstock.com/image-illustration/shop-icon-on-white-background-600w-569649118.jpg">
                        <h4>Shop name here</h4>
                    </div>
                </div>
                <div class="col align-self-center">
                    <div class ="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                            <span class="icon_phone"></span>
                            <h4>SĐT</h4>
                            <p>+01-3-8888-6868</p>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                            <span class="icon_pin_alt"></span>
                            <h4>Địa chỉ</h4>
                            <p>60-49 Road 11378 New York</p>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                            <span class="icon_mail_alt"></span>
                            <h4>Email</h4>
                            <p>hello@colorlib.com</p>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                            <a type="button" class="site-btn">Danh sách đơn hàng</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->
    <!-- Shop Product List Section Begin -->
    <section class="product-details spad" style="padding:10px; !important">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Danh sách sản phẩm</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                {{#each sanpham}}
                    <div class="col-lg-3 col-md-4 col-sm-6 ">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="{{this.nguon_hinh_anh}}">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="/item-detail?id={{this.ma_sp}}"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">{{this.ten_sp}}</a></h6>
                                <h5>{{this.gia_sp}}</h5>
                                <span>Còn lại: {{this.so_luong_con_lai}}</span>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
         <nav aria-label="Page navigation example">
                {{{paginateHelper pagination paginationClass="pagination"}}}
        </nav>
    </section>
    <!-- Shop Product List Section End -->
</body>
