

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Ngày mua</th>
            <th scope="col">Tên người nhận</th>
            <th scope="col">SĐT người nhận</th>
            <th scope="col">Tổng tiền</th>
            <th scope="col">Note</th>

            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each orders}}
        <tr>
            <th scope="row">{{this.diaChi}}</th>
            <td>{{this.ngayMua}}</td>
            <td>{{this.tenNguoiNhan}}</td>
            <td>{{this.sdt}}</td>
            <td>{{this.tongTien}}</td>
            <td>{{this.trangThai}}</td>
            <td class="text-end">
                <a href="/order/detail?id={{this.maDonHang}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
                    View Detail</a>
            </td>
        </tr>
        {{/each}}

    </tbody>

</table>
   <nav aria-label="Page navigation example">
        {{{paginateHelper pagination paginationClass="pagination"}}}
    </nav>