            </tr>
        </thead>
        <tbody>
            {{#each sp}}
            <tr>
                <th scope="row">{{ten}}</th>
                <td>{{#formatMoney doanhThu}}{{/formatMoney}}</td>
                <td>{{soLuongDonHang}}</td>
                <td>{{thoiGian}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
